{{>layout/basic_header}}
<section class="bg-light py-5">
    <div class="container px-5 my-5 px-5">
        <div class="row gx-5 justify-content-center">
            <div class="col-lg-6">
                <!-- * * * * * * * * * * * * * * *-->
                <!-- * * SB Forms Contact Form * *-->
                <!-- https://startbootstrap.com/solution/contact-forms-->
                <!-- to get an API token!-->
                <form id="contactForm" data-sb-form-api-token="API_TOKEN">
                    <!--학교 입력-->
                    <div class="form-floating mb-3">
                        <div class="input-group">
                        <input class="form-control" id="school_search" type="text" placeholder="학교 입력" data-sb-validations="required"/>
                        <label for="name"><a class="btn btn-primary" href="#!">검색</a></label>
                        <div class="invalid-feedback" data-sb-feedback="name:required">학교를 입력해주세요</div>
                        </div>
                    </div>
                    <!--학과 입력-->
                    <div class="form-floating mb-3">
                    <div class="input-group">
                        <input class="form-control" id="department" type="text" placeholder="학과 입력" data-sb-validations="required" />
                        <label for="name"><a class="btn btn-primary" href="#!">검색</a></label>
                        <div class="invalid-feedback" data-sb-feedback="name:required">학과를 입력해주세요</div>
                    </div>
                </div>
                    <!--이메일 입력-->
                    <div class="form-floating mb-3">
                        <div class="input-group">
                            <input class="form-control" id="email" type="text" placeholder="학교이메일 입력" data-sb-validations="required" />
                            <label for="name"><a class="btn btn-primary" href="#!">인증</a></label>
                            <div class="invalid-feedback" data-sb-feedback="name:required">학과를 입력해주세요</div>
                        </div>
                    </div>
                    <div class="form-floating mb-3">
                        <div class="input-group">
                            <input class="form-control" id="number" type="text" placeholder="학번" data-sb-validations="required" />
                            <label for="name"></label>
                            <div class="invalid-feedback" data-sb-feedback="name:required">학번을 입력해주세요</div>
                        </div>
                    </div>
                    <div class="form-floating mb-3">
                        <div class="input-group">
                            <input class="form-control" id="name" type="text" placeholder="이름" data-sb-validations="required" />
                            <label for="name"></label>
                            <div class="invalid-feedback" data-sb-feedback="name:required">이름을 입력해주세요</div>
                        </div>
                    </div>
                    <div class="form-floating mb-3">
                        <div>
                        <input type="radio" name="jb-radio" id="jb-radio-1" class="custom-control-input">
                        <label for="jb-radio-m">남자</label>
                        <input type="radio" name="jb-radio" id="jb-radio-1" class="custom-control-input">
                        <label class="form-check-label" for="jb-radio-w">여자</label>
                        </div>
                    </div>
                    <div class="form-floating mb-3">
                        <div class="input-group">
                            <input class="form-control" id="birth" type="text" placeholder="생년월일" data-sb-validations="required" />
                            <label for="name"></label>
                            <div class="invalid-feedback" data-sb-feedback="name:required">생년월일을 입력해주세요</div>
                        </div>
                    </div>
                    <div class="form-floating mb-3">
                        <div class="input-group">
                            <input class="form-control" id="id" type="text" placeholder="아이디" data-sb-validations="required" />
                            <label for="name"><a class="btn btn-primary" href="#!">중복확인</a></label>
                            <div class="invalid-feedback" data-sb-feedback="name:required">아이디를 입력해주세요</div>
                        </div>
                    </div>
                    <div class="form-floating mb-3">
                        <div class="input-group">
                            <input class="form-control" id="password1" type="text" placeholder="비밀번호" data-sb-validations="required" />
                            <label for="name"></label>
                            <div class="invalid-feedback" data-sb-feedback="name:required">비밀번호를 입력해주세요</div>
                        </div>
                    </div>
                    <div class="form-floating mb-3">
                        <div class="input-group">
                            <input class="form-control" id="password2" type="text" placeholder="비밀번호 확인" data-sb-validations="required" />
                            <label for="name"></label>
                            <div class="invalid-feedback" data-sb-feedback="name:required">비밀번호가 틀립니다</div>
                        </div>
                    </div>
                    <div class="form-floating mb-3">
                        <div class="input-group">
                            <input class="form-control" id="password" type="textarea" placeholder="자신을 소개해주세요!!" data-sb-validations="required" />
                            <label for="name"></label>
                        </div>
                    </div>
                    <div><button class="btn btn-primary form-control" id="registerButton" type="submit" onclick="location.href='/login'">회원가입</button></div>
                </form>
            </div>
        </div>
    </div>
</section>
{{>layout/footer}}