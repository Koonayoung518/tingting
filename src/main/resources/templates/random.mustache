{{>layout/header}}
<h1>랜덤매칭</h1>
<script>
    var n = 1;
    function minus(){
        var i =document.getElementById("var1");
        if(n==1)
            return;
        i.innerHTML= --n;
    }
    function plus(){
        var i =document.getElementById("var1");
        if(n==5)
            return;
        i.innerHTML = ++n;

    }
     $(document).ready(function(){
            $('#btn_p').click(function(){
                const html = "<input id="userid" type="text"/><br>";

                $('#f_space').append(html);
            });
        });
        document.getElementById("f_space").appendChild += "<input id="userid" type="text"/><br>";
</script>
<table>
    <tr><td><button id="btn_m" onclick="minus()">-</button></td><td id="var1">1</td><td><button id="btn_p" onclick="plus()">+</button></td></tr>
<form id="f_space">

</form>
</table>

